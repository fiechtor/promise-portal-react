{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "react",
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [
      {
        "files": "config/**/*",
        "extends": "eslint:recommended"
      }
    ],
    "ignorePatterns": [
      "dist",
      "node_modules"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }