{
  "name": "promise-portal-react",
  "version": "0.1.36",
  "description": "Allow rendering of promise based components in react and react-native",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run lint && rm -rf ./dist && tsc",
    "start": "tsc --watch --outDir ./example/node_modules/promise-portal-react/dist",
    "lint": "eslint . --ext .js,.ts,.tsx --max-warnings=0",
    "prepare": "npm run build",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rpenfold/promise-portal-react.git"
  },
  "keywords": [
    "react",
    "react-native",
    "promise",
    "portal"
  ],
  "author": "Ryan Penfold",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rpenfold/promise-portal-react/issues"
  },
  "homepage": "https://github.com/rpenfold/promise-portal-react#readme",
  "peerDependencies": {
    "react": "*"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.37.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "8.0.1",
    "@types/jest": "30.0.0",
    "@types/react": "19.2.2",
    "@typescript-eslint/eslint-plugin": "8.46.0",
    "@typescript-eslint/parser": "8.46.0",
    "codecov": "3.8.3",
    "eslint": "9.37.0",
    "eslint-plugin-react": "7.37.5",
    "jest": "30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "3.6.2",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-test-renderer": "19.2.0",
    "ts-jest": "29.4.4",
    "typescript": "5.9.3"
  }
}
