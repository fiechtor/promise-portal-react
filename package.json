{
  "name": "promise-portal-react",
  "version": "0.1.33",
  "description": "Allow rendering of promise based components in react and react-native",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run lint && rm -rf ./dist && tsc",
    "start": "tsc --watch",
    "lint": "eslint . --ext .js,.ts,.tsx --max-warnings=0",
    "prepare": "npm run build",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rpenfold/promise-portal-react.git"
  },
  "keywords": [
    "react",
    "react-native",
    "promise",
    "portal"
  ],
  "author": "Ryan Penfold",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rpenfold/promise-portal-react/issues"
  },
  "homepage": "https://github.com/rpenfold/promise-portal-react#readme",
  "peerDependencies": {
    "react": "*"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "7.0.0",
    "@types/enzyme": "3.10.5",
    "@types/jest": "26.0.23",
    "@types/react": "17.0.8",
    "@typescript-eslint/eslint-plugin": "4.25.0",
    "@typescript-eslint/parser": "4.25.0",
    "codecov": "3.8.3",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.2",
    "eslint": "6.8.0",
    "eslint-plugin-react": "7.19.0",
    "jest": "27.0.2",
    "prettier": "2.3.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-test-renderer": "16.13.1",
    "ts-jest": "27.0.1",
    "typescript": "4.3.2"
  }
}
